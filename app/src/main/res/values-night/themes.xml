<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        sources>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

        <style name="MainMaterialButton"  parent="Widget.MaterialComponents.Button">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">0dp</item>
            <item name="android:backgroundTint">@color/black</item>
            <item name="android:textColor">@color/text</item>
            <item name="iconTint">@color/text</item>
            <item name="cornerRadius">@dimen/corner_radius</item>
            <item name="iconPadding">8dp</item>
            <item name="iconGravity">textStart</item>
            <item name="android:fontFamily">@font/ys_text_medium</item>
            <item name="android:textAllCaps">false</item>

        </style>

        <style name="SettingTextColor">
            <item name="android:textColor">@color/text</item>

        </style>



    <style name="PageMock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>

    </style>
    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/top_padding</item>
        <item name="android:background">@color/black</item>


    </style>



</resources>