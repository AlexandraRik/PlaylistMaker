<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        sources>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>




        <!-- Customize your theme here. -->
    </style>



        <style name="SettingTextColor">
            <item name="android:textColor">@color/white</item>

        </style>



    <style name="PageMock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>

    </style>
    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/top_padding</item>
        <item name="android:background">@color/black</item>


    </style>

    <style name="LinearLayoutStyleSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/top_padding</item>
    </style>
    <style name="SettingTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="thumbTint">@drawable/switch_thumb_selector</item>
        <item name="trackTint">@drawable/switch_track_selector</item>

    </style>

    <style name="BackButtonColor">
        <item name="android:src">@drawable/backnight</item>

    </style>
    <style name="TextViewIcon">
        <item name="android:drawableLeft">@drawable/search_small</item>
        <item name="android:background"> @drawable/rounded_edittextnight</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="DeleteIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:src">@drawable/delete2night</item>
    </style>


    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/trackName_text_size</item>
    </style>

    <style name="TrackInformationStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/track_text_size</item>
    </style>

    <style name="NoResultImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/noresultsimagenight</item>
    </style>

    <style name="ErrorImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/errornight</item>
    </style>

    <style name="PlaceHolderTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="RetryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/retry</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowRadius">0</item>
    </style>





</resources>