<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        style="@style/LinearLayoutStyleSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_height="wrap_content">

            <ImageView
                style = "@style/BackButtonColor"
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconGravity="textStart"/>

            <TextView
                style = "@style/SettingTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_name"
                android:textSize="@dimen/text_size"
                android:fontFamily = "@font/ys_text_medium"
                android:paddingLeft="24dp"/>

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/editText"
                style="@style/TextViewIcon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:hint="@string/searchHint"
                android:lines="1"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <ImageView
                style="@style/DeleteIcon"
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:padding="10dp"
                android:visibility="gone"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_padding"
            app:layout_constraintTop_toBottomOf="@id/editText"
            android:padding="@dimen/recyclePadding"/>

        <ImageView
            style="@style/NoResultImage"
            android:id="@+id/noResultsImage"
            app:layout_constraintTop_toBottomOf="@id/editText"
            android:layout_marginTop="@dimen/placeHolder_marginTop"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            style="@style/PlaceHolderTextView"
            android:id="@+id/noResultsText"
            android:text="@string/noResultText"
            app:layout_constraintTop_toBottomOf="@id/noResultsImage"
            android:visibility="gone"/>

        <ProgressBar android:id="@+id/progressBar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="108dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/blue"
            android:visibility="gone"/>

        <ImageView
            style="@style/ErrorImage"
            android:id="@+id/errorImage"
            android:layout_marginTop="@dimen/placeHolder_marginTop"
            app:layout_constraintTop_toBottomOf="@id/editText"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            style="@style/PlaceHolderTextView"
            android:id="@+id/errorText1"
            android:text="@string/errorMessage1"
            app:layout_constraintTop_toBottomOf="@id/errorImage"
            android:visibility="gone"/>

        <Button
            style="@style/RetryButtonStyle"
            android:id="@+id/retryButton"
            android:text="@string/retry"
            android:layout_gravity="center"
            app:cornerRadius="@dimen/corner_radius_big"
            app:layout_constraintTop_toBottomOf="@id/errorText1"
            android:visibility="gone"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style = "@style/SettingTextColor"
                    android:id = "@+id/historyLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_line"
                    android:textSize="@dimen/small_text_size"
                    android:layout_gravity="center"
                    android:fontFamily = "@font/ys_display_medium"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/historyRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:padding="@dimen/recyclePadding"/>

                <Button
                    style="@style/ClearButtonStyle"
                    android:id="@+id/clearButton"
                    android:text="@string/clear_history"
                    android:layout_gravity="center"
                    app:cornerRadius="@dimen/corner_radius_big"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
