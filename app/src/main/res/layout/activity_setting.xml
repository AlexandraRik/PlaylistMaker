<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayoutStyleSetting"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                style = "@style/BackButtonColor"
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconGravity="textStart"
                />

            <TextView
                style = "@style/SettingTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confguration_name"
                android:textSize="@dimen/text_size"
                android:fontFamily = "@font/ys_display_medium"
                android:paddingLeft="24dp"/>

        </androidx.appcompat.widget.Toolbar>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="27dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/edges_padding_setting"
        android:paddingRight="@dimen/edges_padding_setting"

        >


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_off"
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/dark_theme"
             />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/edges_padding_setting"
        android:paddingRight="@dimen/edges_padding_setting"
        >

        <TextView
            android:id ="@+id/share_button"
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:text="@string/share"
            android:layout_marginBottom="@dimen/marginTop_setting"
            android:drawableEnd="@drawable/share"

            />
        <TextView
            android:id ="@+id/help_button"
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginTop_setting"
            android:layout_marginBottom="@dimen/marginTop_setting"
            android:text="@string/help"
            android:drawableEnd="@drawable/group"

            />

        <TextView
            android:id ="@+id/user_button"
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginTop_setting"
            android:text="@string/agreement"
            android:drawableEnd="@drawable/ahead"

            />











    </LinearLayout>





</LinearLayout>